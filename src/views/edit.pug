extends base.pug

block content
    h4 Update Videos
    form(method="POST")
        input(name="title",placeholder="Video Title",value=video.title,required)
        input(type="text",placeholder="Description",required,name="description",minLength=20,value=video.description)
        input(type="text",placeholder="Hashtags",required,name="hashtags",value=video.hashtags.join())
        input(value="Save",type="submit")
